<div class="field">
  <label class="label">Username</label>
  <div class="control">
    <input id="username" class="input is-success" type="text" placeholder="Username">
    <span class="icon is-small is-left">
      <i class="fas fa-user"></i>
    </span>
    <span class="icon is-small is-right">
      <i class="fas fa-check"></i>
    </span>
  </div>
  <p class="help is-success">Enter username</p>
</div>

<!--Wrap in form to handle submit signup-form-->

<div class="field">
  <label class="label">Email</label>
  <div class="control">
    <input id="email" class="input is-success" type="email" placeholder="Email">
    <span class="icon is-small is-left">
      <i class="fas fa-envelope"></i>
    </span>
    <span class="icon is-small is-right">
      <i class="fas fa-check"></i>
    </span>
  </div>
  <p class="help is-success">Enter email</p>
</div>

<div class="field">
  <label class="label">Password</label>
  <div class="control">
    <input id="password" class="input is-success" type="password" placeholder="Password">
    <span class="icon is-small is-left">
      <i class="fas fa-lock"></i>
    </span>
    <span class="icon is-small is-right">
      <i class="fas fa-check"></i>
    </span>
  </div>
  <p class="help is-success">Enter password</p>
</div>

<div class="field is-grouped">
  <div class="control">
     <button id="signupBtn" class="button is-link">Sign Up</button>
  </div>
  <div class="control">
    <button class="button is-link is-light">Clear</button>
  </div>
</div>


<script src="./js/login.js"></script>